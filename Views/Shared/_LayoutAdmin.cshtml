<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Nativo Sistemas" />
    <meta name="distribution" content="Global" />
    <meta name="city" content="Rosario" />
    <meta name="country" content="Argentina" />
    <meta name="geography" content="Urquiza 1455 - Rosario - Santa Fe - Argentina" />
    <title>@ViewData["Title"] - NativoSistemas</title>
    <link rel="stylesheet" href="~/css/li/bootstrap.min.css" >
    <link rel="stylesheet" href="~/css/admin/admin.css?n=1" >
</head>
<body>
    <div class="container body-content">     
<!-- inicio navbar -->
@{
    Microsoft.AspNetCore.Routing.RouteValueDictionary rv = ViewContext.RouteData.Values;
    string page = rv.ToArray()[1].Value.ToString();
    string classRol = "";
    string classRegla = "";
    string classUsuario = "";
    string classReglaRol = "";
    string strController = page;
    switch (strController)
    {
        case "RolIndex":
        case "RolCreate":
        case "RolDelete":
        case "RolDetails":
        case "RolEdit":                 
            classRol = " active ";
            break;
        case "ReglaIndex":
            classRegla = " active ";
            break;
        case "UsuarioIndex":
        case "UsuarioDetails":
        case "UsuarioCreate":
        case "UsuarioEdit":
        case "UsuarioDelete":                 
            classUsuario = " active ";
            break;
       case "ReglasRolIndex":                 
            classReglaRol = " active ";
            break;            
        default:
            break;
    }

}
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="@Url.Action("Index", "Admin")" >nativosistemas</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item @{ WriteLiteral(classUsuario);}">
                <a class="nav-link" href="@Url.Action("UsuarioIndex", "Admin")">Usuario</a>
            </li>             
            <li class="nav-item @{ WriteLiteral(classRol);}">
                <a class="nav-link" href="@Url.Action("RolIndex", "Admin")">Rol <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item @{ WriteLiteral(classRegla);}">
                <a class="nav-link" href="@Url.Action("ReglaIndex", "Admin")">Regla</a>
            </li>         
            <li class="nav-item @{ WriteLiteral(classReglaRol);}">
                <a class="nav-link" href="@Url.Action("ReglasRolIndex", "Admin")">Regla Rol</a>
            </li>               
        </ul>
    </div>
</nav>
<!-- inicio modal -->
<div id="ContentModal">

</div>
<!-- fin modal -->   
<!-- inicio alert -->
<div id="ContentAlert">

</div>
<!-- fin alert -->
        @RenderBody()
        <!-- <hr />
        <footer>
            <p>Â© @{WriteLiteral( DateTime.Now.Year );} - <a href="http://www.nativosistemas.com/" target="_blank">www.nativosistemas.com</a></p>
        </footer> -->
    </div>
    <script src="~/js/libreria.js?n=0"></script>  
    <script src="~/js/admin/mensaje.js?n=1"></script> 
    <script src="~/js/admin/admin.js?n=0"></script> 
    <script src="~/js/admin/ajaxAdmin.js?n=1"></script>  
    @RenderSection("scripts", required: false)
</body>
</html>