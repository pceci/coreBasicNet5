@{
    ViewData["Title"] = "Admin";
}
@section Scripts{
 <script src="~/js/admin/gestionrolesyreglas.js?n=5"></script>
 }
 @{
    string resultado = string.Empty;
    string strListaChecks = ViewBag.ListaTodasReglasPorNivel;
     if (strListaChecks != null)
     {
           resultado += "<input type=\"hidden\" id=\"hiddenListaTodasReglasPorNivel\" value=\"" + System.Net.WebUtility.HtmlEncode(strListaChecks) + "\" />";
     }
     string strComboRol = ViewBag.comboRoles;
     if (strComboRol != null)
     {
           resultado += "<input type=\"hidden\" id=\"hiddenListaTodosRoles\" value=\"" + System.Net.WebUtility.HtmlEncode(strComboRol) + "\" />";
     }
     WriteLiteral(resultado);
}
<h2>Roles y reglas</h2>
<div class="row">
    <div class="col-8">
        <div id="divSectorArbol"></div>
    </div>
    <div class="col-4">
        <div class="row justify-content-end">
            <div class="col-6">
                <div class="form-group">
                    <label for="cmbRoles">Rol:</label>
                    <select class="form-control" id="cmbRoles" onchange="ChangeIndexComboRol()">
                    </select>
                </div>

            </div>
            <div class="col-6">
                <button id="btnGuardar" class="btn btn-primary" onclick="return ClickGuardar()">
                    Guardar</button>
            </div>
        </div>
    </div>
</div>